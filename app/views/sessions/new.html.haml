.main_w.main_work_area.no_border
  .Signin
    .pading_15
      %h3.signin_heading Log in
      = form_tag sessions_path do
        %p
          = label_tag :email
          %br/
          = text_field_tag :email, params[:email], :autofocus => true
        %p
          = label_tag :password
          %br/
          = password_field_tag :password
        %p
        %p
          = link_to "Forgot your password?", new_password_reset_path
        %p
          = check_box_tag :remember_me, 1, params[:remember_me], :style=>"width:15px;height:15px;"
          %span{style: "position: relative; top: -2px;"}
            Remember me
        %p
          %span.label{:style=>"margin:1px;"}
            = submit_tag "Log in", :class => "submit" , :style => "margin-top:7px;"
            
:css

  .select_web{
    display: none;
  }
  